<Alloy>

	<!--
	Because our controller is passed a model via the $model argument
	we can use data-binding here.
	-->
	<Window title="{time}" onClose="onWindowClose">
		<RightNavButton systemButton="TRASH" onClick="deletePicture" />

		<!-- Filepath is a transformation handled in models/picture.js -->
		<ImageView image="{filepath}" />
		
	</Window>
</Alloy>